/* Icons */
@font-face {
	font-family: "{{fontName}}";
  src: url("{{fontsUrl}}/iconfont.woff2") format("woff2");
	font-display: swap;
  font-weight: 400;
}

:root {
{{#each codepoints}}
  --{{../classPrefix}}{{@key}}: "\\{{this}}";
{{/each}}
}

[class*="{{classPrefix}}"] {
  display: inline-flex;
  align-items: center;
  font-style: normal;
}

[class*="{{classPrefix}}"]::before {
	font-family: {{fontName}};
  font-style: normal;
}

{{#each codepoints}}
[class*="{{../classPrefix}}{{@key}}"]::before {
  content: "\\{{this}}";
}

{{/each}}